<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rizkianiktia.rizki_1202154339_modul2.detailmenu">

    <ImageView
        android:id="@+id/DetailGambar"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:src="@drawable/ayam_bakar"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/DetailNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nasi ayam rendang"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/DetailHarga"
        android:textSize="22dp"
        android:text="Rp 45.000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/Deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/DetailDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terbuat dari ayam kampung, bumbu lezat"
        android:textSize="16dp"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />


</LinearLayout>
